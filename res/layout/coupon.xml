<?xml version="1.0" encoding="utf-8"?>

<!-- 优惠界面 -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
     >
    	
    	<EditText
    	    android:id="@+id/coupon_search"
    	    android:layout_width="match_parent"
    	    android:layout_height="0dp"
    	    android:layout_weight="1"
    	    android:background="@drawable/search_bg"
    	    android:gravity="center"
    	    android:hint="@string/search"
    	    android:layout_marginLeft="50dp"
    	    android:layout_marginRight="50dp"
    	    android:layout_marginTop="10dp"
    	    android:layout_marginBottom="10dp"
    	    />
    	<RelativeLayout 
    	    android:layout_width="match_parent"
		    android:layout_height="0dp"
		    android:layout_weight="3"
    	    >
    	    <android.support.v4.view.ViewPager
    	        android:id="@+id/coupon_vip"
		    	android:layout_width="match_parent"
		    	android:layout_height="match_parent"
		    />
    	    <LinearLayout
    	        android:layout_width="wrap_content"
    	        android:layout_height="wrap_content"
    	        android:orientation="horizontal"
    	        android:layout_alignParentBottom="true"
    	        android:layout_alignParentRight="true"
    	        android:layout_marginBottom="10dp"
    	        android:layout_marginRight="15dp"
    	        >
    	        <ImageView 
    	            android:id="@+id/coupon_dot1"
    	            android:layout_width="wrap_content"
    	            android:layout_height="wrap_content"
    	            android:src="@drawable/coupon_dot_a"
    	            />
    	        <ImageView 
    	            android:id="@+id/coupon_dot2"
    	            android:layout_width="wrap_content"
    	            android:layout_height="wrap_content"
    	            android:src="@drawable/coupon_dot_a"
    	            android:layout_marginLeft="3dp"
    	            android:layout_marginRight="3dp"
    	            />
    	        <ImageView 
    	            android:id="@+id/coupon_dot3"
    	            android:layout_width="wrap_content"
    	            android:layout_height="wrap_content"
    	            android:src="@drawable/coupon_dot_a"
    	            />
    	    </LinearLayout>
    	</RelativeLayout>
		<LinearLayout 
		    android:id="@+id/coupon_menu"
		    android:layout_width="match_parent"
		    android:layout_height="0dp"
		    android:layout_weight="0.8"
		    android:layout_marginLeft="60dp"
    	    android:layout_marginRight="60dp"
    	    android:layout_marginTop="10dp"
    	    android:layout_marginBottom="10dp"
    	    android:background="@drawable/coupon_menu1"
    	    android:orientation="horizontal"
		    >
    	    <ImageButton 
    	        android:id="@+id/coupon_menu1"
    	        android:layout_width="match_parent"
    	        android:layout_height="match_parent"
    	        android:layout_weight="1"
    	        android:background="@null"
    	        />
    	    <ImageButton 
    	        android:id="@+id/coupon_menu2"
    	        android:layout_width="match_parent"
    	        android:layout_height="match_parent"
    	        android:layout_weight="1"
    	        android:background="@null"
    	        />
		</LinearLayout>
		<ListView 
		    android:id="@+id/coupon_listview"
		    android:layout_width="match_parent"
		    android:layout_height="0dp"
		    android:layout_weight="7"
		    android:layout_marginLeft="20dp"
		    android:layout_marginRight="20dp"
		    android:dividerHeight="10dp"
			android:divider="@color/background"
		    ></ListView>
</LinearLayout>
