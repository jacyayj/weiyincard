<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" 
    android:padding="5dp"
    android:background="@drawable/coupon_item_bg"
    >
    
    <ImageView 
        android:id="@+id/coupon_item_icon"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1.2"
        android:src="@drawable/icon_dicos"
        android:layout_marginLeft="10dp"
        />
    <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:src="@drawable/dash_line" 
            android:layout_margin="10dp"
            />
    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical"
         >
        <TextView 
            android:id="@+id/coupon_item_lable"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#666"
            android:gravity="center_vertical"
            />
        <TextView 
            android:id="@+id/coupon_item_describe"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:textSize="14sp"
            android:textColor="#999"
            />
    </LinearLayout>

    <RelativeLayout 
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:orientation="vertical"
        >
         <ImageView 
             android:id="@+id/addcard_get"
             android:layout_width="50dp"
             android:layout_height="20dp"
             android:src="@drawable/go"
             android:layout_centerInParent="true"
             />
         <TextView 
             android:id="@+id/coupon_item_remark"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="#F8623E"
             android:textSize="12sp"
             android:layout_gravity="bottom"
             android:layout_alignParentBottom="true"
             />
    </RelativeLayout>

</LinearLayout>
