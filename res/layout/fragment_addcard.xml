<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="@drawable/title_bg"
        >
        	<ImageView 
        	    android:id="@+id/addcard_back"
        	    android:layout_width="20dp"
        	    android:layout_height="20dp"
        	    android:src="@drawable/back"
        	    android:layout_alignParentLeft="true"
        	    android:layout_centerVertical="true"
        	    android:layout_marginLeft="20dp"
        	    />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/add_card"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textSize="18sp"
            />
        <TextView 
            android:id="@+id/addcard_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:text="@string/finish"
            android:textColor="#fff"
            />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/addcard_menu"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.8"
        android:background="@drawable/addcard_menu1"
        android:orientation="horizontal"
        >
        <ImageButton 
            android:id="@+id/addcard_menu1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            />
        <ImageButton 
            android:id="@+id/addcard_menu2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            />
    </LinearLayout>
	<android.support.v4.view.ViewPager
	    android:id="@+id/addcard_vip"
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="10.2"
	    />
</LinearLayout>